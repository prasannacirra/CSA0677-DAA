def min_operations(arr1, arr2):
    n, m = len(arr1), len(arr2)
    dp = {0: -arr2[0]}
    for i in range(1, n):
        new_dp = {}
        for key in dp:
            if arr1[i] > arr1[i - 1] + dp[key]:
                new_dp[key] = max(new_dp.get(key, 0), -arr2[i])
            if arr2[i] > key:
                new_dp[arr1[i - 1]] = max(new_dp.get(arr1[i - 1], 0), arr2[i])
        dp = new_dp
    if not dp:
        return -1
    return n - 1 - max(dp)

# Example
arr1 = [1, 5, 3, 6, 7]
arr2 = [1, 3, 2, 4]
print(min_operations(arr1, arr2))  # Output: 1
