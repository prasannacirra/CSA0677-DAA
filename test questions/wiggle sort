def wiggleSort(nums):
    nums.sort()
    half = len(nums[::2])
    nums[::2], nums[1::2] = nums[:half][::-1], nums[half:][::-1]

# Example 1
nums1 = [1, 5, 1, 1, 6, 4]
wiggleSort(nums1)
print(nums1)  # Output: [1, 6, 1, 5, 1, 4]

# Example 2
nums2 = [1, 3, 2, 2, 3, 1]
wiggleSort(nums2)
print(nums2)  # Output: [2, 3, 1, 3, 1, 2]
