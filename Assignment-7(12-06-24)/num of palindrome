def max_num_of_palindromes(s, k):
    def is_palindrome(sub):
        return sub == sub[::-1]

    n = len(s)
    dp = [0] * (n + 1)
    for i in range(1, n + 1):
        dp[i] = dp[i - 1]
        for j in range(i, 0, -1):
            if i - j + 1 < k:
                continue
            if is_palindrome(s[j - 1:i]):
                dp[i] = max(dp[i], dp[j - 1] + 1)

    return dp[n]
